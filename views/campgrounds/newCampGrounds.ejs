<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">New CampGrounds</h1>
            <div style="width: 30%; margin: 25px auto">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="Name Of The Camp" required>
                    </div>
                    <div class="form-group">
                        <input type="url" class="form-control" type="text" name="image"placeholder="https://example.com" pattern="https://.*" required>
                    </div>
                    <div class="form-group">
                         <input class="form-control" type="number" name="price" placeholder="price" step="0.01" min="0" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="description" placeholder="description" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
            </div>
    </div>
</div>
<% include ../partials/footer %>
